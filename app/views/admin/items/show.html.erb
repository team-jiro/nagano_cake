<div class="container">
  <h3>商品詳細</h3>
  <div class="row">
    <div class="col-md-4">
<p><%= image_tag @item.get_image, size:"300x200" %></p>
    </div>
    <div class="col-md-5">
      <table class="table cart_items">
        <tr>
          <th>商品</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.explanation %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込み価格<br>（税抜価格）</th>
          <td><%= @item.price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><%= @item.is_active ? "販売中" : "販売停止中" %></td>
        </tr>
      </table>
      <br>
      <%= link_to edit_admin_item_path(@item.id) do %>
        <button type="button" class="btn btn-success">
          編集する
        </button>
      <% end %>
    </div>
  </div>
</div>
