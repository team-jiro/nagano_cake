<div class="container">
  <h3>商品新規登録</h3>

  <div class="row">
    <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
    <div class="col">
      <%= render "public/shared/error_messages", resource: @item %>
    </div>
      <table class="cart_items">
          <tr>
          <th>商品画像</th>
          <td><%= f.file_field :image %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :explanation %></td>

        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= f.collection_select :genre_id, @genres, :id, :name %></td>
        <tr>
          <th>税抜き価格</th>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中" %>
          </td>
        </tr>
      </table>
      <br>
      <%= f.submit "新規登録" , class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>