<div class="container">
  <div class="row">
    <h4>ジャンル編集</h4>
      <form class="form-inline">
        <%= form_with model: @genre do |f| %>
          <label for="inputName">ジャンル名</label>
          <%= f.text_field :name, autofocus :true, id:"inputName" %>
          <%= f.submit '変更を保存' %>
        <% end %>
      </form>
  </div>
</div>
