<h4>ジャンル一覧・追加</h4>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="form-group my-5">ジャンル名
      <a class="pl-md-4"><%= f.text_field :name, placeholder:"ジャンル名" %></a>
      <a class="pl-md-4"><%= f.submit '新規登録', class: "btn btn-success btn-sm" %></a>
    </div>
  <% end %>
  
<table class="table col-md-4">
  <thead class="table-active">
    <tr>
      <th class="text-md-center">ジャンル</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>