<div class="container">
  <div class="row">
    <h3>注文詳細</h3>
  </div>

  <div class="row">
    <div class="col-md-3">
      <p><strong>購入者</strong></p>
    </div>
    <div class="col-md-6">

      <p><%= @order.customer.full_name %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <p><strong>注文日</strong></p>
    </div>
    <div class="col-md-6">
      <p><%= @order.created_at.strftime("%Y/%m/%d") %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <p><strong>配送先</strong></p>
    </div>
    <div class="col-md-6">
      <p>
        <%= @order.shipping_address %> <%= @order.shipping_address %><br>
        <%= @order.shipping_name %>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <p><strong>支払方法</strong></p>
    </div>
    <div class="col-md-6">
      <p><%= @order.payment_method %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <p><strong>注文ステータス</strong></p>

        <%= flash[:notice] %>

    </div>
    <div class="col-md-6 d-flex clearfix">
    <!--ここの記述あやしい-->
      <%= form_with model: @order, url: admin_order_path(@order), local:true do |f| %>
        <%= f.select :status, Order.statuses.keys.map { |k| [I18n.t("enums.order.status.#{k}"), k] } %>
        <%= f.submit "更新" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <table class="table cart_items">
        <tr>
            <th>商品名</th>
            <th>単価</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
        </tr>
        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.tax_included_price.to_s(:delimited) %></td>
            <td><%= order_item.amount %></td>
            <td><%= (order_item.item.price * order_item.amount).to_s(:delimited) %>円</td>
            <td>
            <!--ここの記述怪しい-->
              <%= form_with model: order_item, url: admin_order_item_path(order_item), local: true do |f| %>
                <%= f.select :crafting_status, OrderItem.crafting_statuses.keys.map { |k| [I18n.t("enums.order_item.crafting_status.#{k}"), k] } %>
                <%= f.submit "更新", class: "" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>

    <div>
      <table class="cart_items">
        <tr>
          <th>商品合計</th>
          <!--商品合計はeachメソッドでコントローラーに定義-->
          <td><%= @total.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td>800円</td>
        </tr>
        <tr>
          <th>請求金額</th>

          <td><%= (@total + 800).to_s(:delimited) %>円</td>
        </tr>
      </table>

    </div>
  </div>
