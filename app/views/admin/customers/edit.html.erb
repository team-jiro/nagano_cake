<% @customers.each do |customer| %>
  <h4><%= customer.full_name %>さんの会員情報編集</h4>
<% end %>

<%= form_with model: @customer, url: admin_customer_path do |f| %>
  <label for="inputName">氏名</label>
    <%= f.text_field :last_name, autofocus: true, id:"inputLastName" %>
    <%= f.text_field :first_name, id:"inputFirstName" %>
  <label for="inputName">フリガナ</label>
    <%= f.text_field :last_name_kana, id:"inputLastNameKana" %>
    <%= f.text_field :first_name_kana, id:"inputFirstNameKana" %>
  <label for="inputPostCode">郵便番号</label>
    <%= f.text_field :post_code, id:"inputPostCode" %>
  <label for="inputAddress">住所</label>
    <%= f.text_field :address, id:"inputAddress" %>
  <label for="inputPhoneNumber">電話番号</label>
    <%= f.text_field :phone_number, id:"inputPhoneNumber" %>
  <label for="inputEmail">メールアドレス</label>
    <%= f.text_field :email, id:"inputEmail" %>
