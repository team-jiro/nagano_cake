<h4>会員一覧</h4>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= customer.full_name %></td>
          <td><%= customer.email %></td>
          <td><%= f.select :is_deleted, [['退会',true],['有効',false]] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= paginate @customers %>