<header class="shadow sticky-top bg-light">
  <nav class="navbar navbar-expand-md navbar-light py-0">
    <a class="navbar-brand font-weight-normal" href="/"><img src="/assets/logo.png" alt="nagano cake logo"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <p class="my-auto mr-2 text-nowrap">ようこそ、<%= current_customer.last_name %>さん！</p>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to 'マイページ', customers_path, method: :get, class: 'nav-link text-secondary border rounded' %>
          </li>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to '商品一覧', items_path, method: :get, class: 'nav-link text-secondary border rounded' %>
          </li>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to 'カート', cart_items_path, method: :get, class: 'nav-link text-secondary border rounded' %>
          </li>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'nav-link text-secondary border rounded' %>
          </li>
        <% elsif admin_signed_in? %>
          <p class="my-auto mr-2 text-nowrap">管理者ログイン中</p>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to '商品一覧', admin_items_path, method: :get, class: 'nav-link text-secondary border rounded' %>
          </li>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to '会員一覧', admin_customers_path, method: :get, class: 'nav-link text-secondary border rounded' %>
          </li>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to '注文履歴一覧', admin_path, method: :get, class: 'nav-link text-secondary border rounded' %>
          </li>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to 'ジャンル一覧', admin_genres_path, method: :get, class: 'nav-link text-secondary border rounded' %>
          </li>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-secondary border rounded' %>
          </li>
        <% else %>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to 'About', about_path, method: :get, class: 'nav-link text-secondary border rounded' %>
          </li>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to '商品一覧', items_path, method: :get, class: 'nav-link text-secondary border rounded' %>
          </li>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to '新規登録', new_customer_registration_path, method: :get, class: 'nav-link text-secondary border rounded' %>
          </li>
          <li class="nav-item mr-1 text-nowrap">
            <%= link_to 'ログイン', new_customer_session_path, method: :get, class: 'nav-link text-secondary border rounded' %>
          </li>
        <% end %>

        <!--検索フォーム-->
        <%= form_with url: search_path, local: true, method: :get, class: "d-flex border border-secondary rounded" do |f| %>
          <%= f.text_field :word, class: "form-control",  placeholder: "Search", style: "width: 100%; border: none;" %>
          <%= button_tag class: "", type: "submit", style: "border: none;" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>

      </ul>
    </div>
  </nav>
</header>