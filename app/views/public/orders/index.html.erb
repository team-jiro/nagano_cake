<main>
  <div class="container my-5 mx-6-md pb-5">
      <h3>注文履歴一覧</h3>
      <table class="table col-md-10 offset-md-1 table-hover">
        <thead class="thead-light">
          <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払い金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
          </tr>
        </thead>
        
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
              <td><%= order.shipping_postal_code %><br><%= order.shipping_address %><br><%= order.shipping_name %></td>
              <td>
                <% order.order_items.each do |order_item| %>
                  <%= order_item.item.name %><br />
                <% end %>
              </td>
              <td><%= order.billing_amount %></td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</main>
