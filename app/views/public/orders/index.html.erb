<div class="row">
  <div class="col-md-12 mb-3">
    <h3>注文履歴一覧</h3>
  </div>
    
  <div class="col-md-12">
    <table class="col-md-12 table table-bordered">
      <thead class="thead-light">
        <tr>
        <th>注文日</th>
        <th scope="col" style="width: 40%">配送先</th>
        <th>注文商品</th>
        <th>支払い金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
        </tr>
      </thead>
      
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="align-middle"><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              〒<%= order.shipping_postal_code %><br>
              <%= order.shipping_address %><br>
              <%= order.shipping_name %>
            </td>
            <td class="align-middle">
              <% order.order_items.each do |order_item| %>
                <%= order_item.item.name %><br />
              <% end %>
            </td>
            <td class="align-middle"><%= order.billing_amount.to_s(:delimited) %>円</td>
            <td class="align-middle"><%= order.status_i18n %></td>
            <td class="align-middle"><%= link_to "表示する", order_path(order), class: "btn btn-primary btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
