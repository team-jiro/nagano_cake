<div class="container mx-auto">
  <h3>配送先登録 / 一覧</h3>

  <div class="row">
    <%= form_with model: @ship do |f| %>
      <div class="col">
        <%= render "public/shared/error_messages", resource: @ship %>
      </div>
      <table>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td><%= f.text_field :post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td class="lg-5"><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>宛名</th>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録" , class: 'btn btn-success' %></td>
        </tr>
      </table>
    <% end %>
  </div>
  <br>
  <div class="row">
    <table class="table">
      <thead>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </thead>
      <tbody>
        <% @ships.each do |ship| %>
          <tr>
            <td><%= ship.post_code %></td>
            <td><%= ship.address %></td>
            <td><%= ship.name %></td>
            <td>
              <%= link_to edit_ship_path(ship) do %>
                <p class="btn btn-success">編集する</p>
              <% end %>
              <%= link_to ship_path(ship), method: :delete, data: { confirm: "#{ship.name}さんの配送先を削除してよろしいですか？" } do %>
                <p class="btn btn-danger">削除する</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>