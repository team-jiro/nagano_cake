<div class="container px-5 px-md-0 mt-5">

  <div class="row" style="margin-left: 0; margin-right: 0;">
    <h3 class="d-inline" style="margin-bottom: 0;">ショッピングカート</h3>
    <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger d-inline ml-auto", "data-confirm" => "カート内の商品を削除してもよろしいですか？"  %>
  </div>

  <div class="cart-items-index">
  <table class="mt-5 mb-5 table table-bordered">

    <thead>
      <tr class="table-active">
        <td class="border border-dark col-4">商品名</td>
        <td class="border border-dark col-1">単価(税込)</td>
        <td class="border border-dark col-1">数量</td>
        <td class="border border-dark col-1">小計</td>
        <td class="border border-dark"></td>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td class="border border-dark text-left">
          <%= link_to item_path(cart_item.item_id) do %>
            <%= image_tag cart_item.item.get_image, size: '80x80' %>
          <% end %>
          <%= cart_item.item.name %>
          </td>
          <td class="border border-dark text-left align-middle"><%= cart_item.item.taxin_price.to_s(:delimited) %></td>
          <td class="border border-dark col-1 align-middle text-nowrap ">
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, class: "text-center", local: true do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit "変更", class: "btn btn-success" %>
            <% end %>
          </td>
          <td class="border border-dark text-left align-middle"><%= cart_item.sum_of_price.to_s(:delimited) %></td>
          <td class="border border-dark col-1 text-center align-middle text-nowrap"><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger", "data-confirm" => "#{cart_item.item.name}を削除してもよろしいですか？" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

  <div class="row" style="margin-left: 0; margin-right: 0;">

    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary h-25 ml-5" %>

    <table class="col-4 ml-auto table table-bordered border-dark" style="margin-bottom: 0;">
      <tbody>
        <tr>
          <td class="border border-dark table-active">合計金額</td>
          <td class="border border-dark"><%= @total.round.to_s(:delimited)%></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row mt-5">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success mx-auto h-25 btn-lg" %>
  </div>

</div>
