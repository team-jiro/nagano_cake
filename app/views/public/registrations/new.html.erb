<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
    <tr>
      <td>名前</td>
      <td>(性) <%= f.text_field :last_name, autofocus: true, autocomplete: "令和" %></td>
      <td>(名) <%= f.text_field :first_name, autocomplete: "道子" %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>(セイ) <%= f.text_field :last_name_kana, autocomplete: "レイワ" %></td>
      <td>(メイ) <%= f.text_field :first_name_kana, autocomplete: "ミチコ" %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email, autocomplete: "sample@example.com" %></td>
      <td></td>
    </tr>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :post_code, autocomplete: "0000000" %></td>
      <td></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, autocomplete: "東京都渋谷区代々木神園町0-0" %></td>
    </tr>
    <tr>
      <td>電話番号(ハイフンなし)</td>
      <td><%= f.text_field :phone_number, autocomplete: "00000000000" %></td>
      <td></td>
    </tr>
    <tr>
      <td>パスワード(６文字以上)</td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      <td></td>
    </tr>
    <tr>
      <td>パスワード(確認用)</td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      <td></td>
    </tr>
  </table>
  <div class="actions">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= link_to customer_session_path do %>こちら<% end %>からログインしてください。