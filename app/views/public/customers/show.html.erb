<div class="row mb-4">
  <div class="col-md-3">
    <h3 class="bg-light text-center">マイページ</h3>
  </div>
</div>

<div class="row py-3">
  <div class="col-md-2">
    <h5 class="font-weight-bold">登録情報</h5>
  </div>
  <div class="col mr-auto">
    <%= link_to "編集する", edit_customers_path, class: "btn btn-success btn-sm px-3 col-md-2" %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-8">
    <table class="table table-bordered table-responsive-md">
      <tr>
        <th class="table-active" style="width:25%">氏名</td>
        <td style="width:75%"><%= current_customer.last_name %> <%= current_customer.first_name %></td>
      </tr>
      <tr>
        <th class="table-active">カナ</td>
        <td><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="table-active">郵便番号</td>
        <td><%= current_customer.post_code %></td>
      </tr>
      <tr>
        <th class="table-active">住所</td>
        <td><%= current_customer.address %></td>
      </tr>
      <tr>
        <th class="table-active">電話番号</td>
        <td><%= current_customer.phone_number %></td>
      </tr>
      <tr>
        <th class="table-active">メールアドレス</td>
        <td><%= current_customer.email %></td>
      </tr>
    </table>
  </div>
</div>

<div class="row py-3">
  <div class="col-md-2">
    <h5 class="font-weight-bold">配送先</h5>
  </div>
  <div class="col mr-auto">
    <%= link_to "一覧を見る", ships_path, class: "btn btn-primary btn-sm px-3 col-md-3" %>
  </div>
</div>

<div class="row py-3">
  <div class="col-md-2">
    <h5 class="font-weight-bold">注文履歴</h5>
  </div>
  <div class="col mr-auto">
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-sm px-3 col-md-3" %>
  </div>
</div>
