<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>商品一覧(全<%= @items.count %>)</h3>
    
      <% @items.each do |item| %>
        <div class="d-inline-block">
          <p><%= image_tag image.get_image, size:'100x100' %></p>
          <p><%= item.name %></p>
          <p>¥ <%= (price * 1.1).floor %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

